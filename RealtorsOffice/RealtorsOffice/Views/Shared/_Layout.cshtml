<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    

</head>
<body>
    <div class="navbar bg-dark navbar-dark navbar-fixed-top navbar-expand-sm">

        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" href="#">Хатинка</a>

            <!-- Links -->
            <ul class="navbar-nav navbar-dark">
                <li class="nav-item">
                    <a class="" href="#">@Html.ActionLink("На головну", "Index", "Home", new { @class = "bg-dark text-white loyout-content" })</a>
                </li>

                <li class="nav-item dropdown">
                    <a class="bg-dark text-white loyout-content dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Місто
                    </a>
                    <div class="dropdown-menu bg-dark">
                        <!--Url.Action("City", "Home", new { cityId = 1 })-->
                        <a class="dropdown-item bg-dark text-white" href="#">Київ</a>
                        <a class="dropdown-item bg-dark text-white" href="#">Харків</a>
                        <a class="dropdown-item bg-dark text-white" href="#">Львів</a>
                        <a class="dropdown-item bg-dark text-white" href="#">Одеса</a>
                        <a class="dropdown-item bg-dark text-white" href="#">Діпро</a>
                        <a class="dropdown-item bg-dark text-white" href="#">Донецьк</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="" href="#">@Html.ActionLink("Контакти", "Contact", "Home", new { @class = "bg-dark text-white loyout-content" })</a>
                </li>
            </ul>
            <ul class="navbar-nav navbar-dark">
                <li class="nav-item">
                    <a class="" href="#">@Html.ActionLink("Кабінет", "Contact", "Home", new { @class = "bg-dark text-white loyout-content" })</a>
                </li>
            </ul>
            @*<div class="navbar-collapse collapse navbar-right">
                    <ul class="navbar-nav">
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                        <li class="nav-item"></li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>*@
        </div>

    </div>
        @RenderBody()
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tereschenko Olexandr</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
